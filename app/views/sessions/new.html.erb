<!DOCTYPE html>
<html>
  <head>
    <title>Thegossipproject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    
  </head>
  <header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
  <a class="navbar-brand" href="#">TheGossipProject</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "Home", root_path, :class=>"nav-link"  %>
      </li>
      <li class="nav-item">
        <%= link_to "Team", team_path, :class=>"nav-link"  %>
      </li>
      <li class="nav-item">
         <%= link_to "Contact", contact_path, :class=>"nav-link"  %>
      </li>
      <li class="nav-item">
         <%= link_to "s'inscrire", new_user_path, :class=>"nav-link"  %>
      </li>
      <li class="nav-item">
         <%= link_to "se connecter", new_session_path, :class=>"nav-link"  %> 
        </li>   
    </ul>
     
  </div>
</nav>
  </header>




<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
  <h1 class="display-4">Login</h1>
</div>
<br>
<div class="container">
  <%= form_tag('/sessions', method: "post", class:'form-signin') do %>
  <div class="form-group">
    <%= text_field_tag :email, placeholder = "Email", class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= password_field_tag :password, placeholder = "Password (minimum of 6 caracters)", class: 'form-control' %>
  </div>
  <%= submit_tag "Submit", class: 'btn btn-default btn btn-success' %>
</div>
<% end %>



